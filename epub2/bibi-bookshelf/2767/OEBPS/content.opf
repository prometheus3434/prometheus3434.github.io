    <dc:title>Çin'de bir Çini'nin başına gelenler</dc:title>
    <dc:creator opf:role="aut" opf:file-as="Verne, Jules &amp; Bedisel, Ender">Jules Verne</dc:creator>
    <dc:creator opf:role="aut">Ender Bedisel</dc:creator>
