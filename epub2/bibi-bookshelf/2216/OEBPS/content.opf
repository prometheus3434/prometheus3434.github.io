    <dc:title>Antik Yunan Dünyasinda Sınıf Mücadelesi</dc:title>
    <dc:creator xmlns:ns0="http://www.idpf.org/2007/opf" ns0:role="aut" ns0:file-as="Croix, G.E.M. de Ste.">G.E.M. de Ste. Croix</dc:creator>
