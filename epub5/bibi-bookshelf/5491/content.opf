    <dc:title>Yaşam kullanma kılavuzu</dc:title>
    <dc:creator opf:role="aut" opf:file-as="Perec, Georges &amp; Yergüz, İsmail">Georges Perec</dc:creator>
    <dc:creator opf:role="aut">İsmail Yergüz</dc:creator>
